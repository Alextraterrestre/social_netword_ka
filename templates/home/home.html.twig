{% extends 'base.html.twig' %}

{% block title %}Hall commun
{% endblock %}

{% block body %}
	{% include './display/header.html.twig' %}
	<section class="container">

		<h1>
			Bienvenue dans notre univers
		</h1>

		 <!-- FORMULAIRE DE CONNEXION -->
		<div class="container__connexion">

			<form action="" method="post">

				<Legend>Connexion à votre espace personnel</Legend>

				<div class="identification">
					<label for="login">Identifiant</label>
					<input type="email" name="login" placeholder="Entrez votre adresse mail">

					<br>
					<label for="password">Mot de passe</label>
					<input type="text" name="password" placeholder="Entrez votre mot de passe">
				</div>

				<div class="btn">
					<button type="submit" name="validate">Valider</button>
					<button type="reset" name="reset">Annuler</button>
				</div>

			</form>

		</div>

		 <!-- FORMULAIRE D'INSCRIPTION -->
		<div class="container__creatAccount">

			<form action="" method="post">

				<Legend>Créer un compte</Legend>

				<div class="identification">
					<label for="login">
						Email</label>
					<input type="text" name="login" placeholder="kaus.australis@exemple.fr">

					<br>
					<label for="password">Mot de passe</label>
					<input type="text" name="password" placeholder="exemple : ABCdef1234?!@">
				</div>

				<br>
				<p>Membre de l'association ?</p>
				<div class="identification">
					<label for="memberCode">numéro d'adhérent</label>
					<input type="text" name="memberCode" placeholder="AstroMember">
				</div>

				<div class="btn">
					<button type="submit" name="validate">Valider</button>
					<button type="reset" name="reset">Annuler</button>
				</div>
			</form>
		</div>
	</section>
{% endblock %}
